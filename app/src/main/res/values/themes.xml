<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DoNotForget" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantLight</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryLight</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryLight</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantLight</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryLight</item>

        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/grey_700</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="colorError">#B00020</item>
        <item name="colorOnError">#FFFFFF</item>

        <item name="text_on_white">@color/grey_700</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:colorBackground">?attr/backgroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?attr/backgroundColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="27">?attr/backgroundColor</item>
        <item name="android:panelFullBackground">?attr/backgroundColor</item>
        <item name="android:itemBackground">?attr/backgroundColor</item>
        <item name="android:itemTextAppearance">@style/menuItem</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
    </style>

    <style name="Theme.DoNotForget" parent="Base.Theme.DoNotForget" />

    <style name="Theme.DoNotForget.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ToolbarButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_3sdp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">?attr/backgroundColor</item>
    </style>

    <style name="menuItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="TimePickerStyle" parent="Widget.MaterialTimePicker">
        <item name="android:textAppearance">@style/TextAppearance.TimePicker</item>
        <item name="highlighterColor">@color/grey_100</item>
        <item name="highlighterHeight">60dp</item>
        <item name="isShowHighlighter">true</item>
        <item name="timeConvention">HOURS_24</item>
        <item name="fadeInAlpha">.3</item>
        <item name="fadeOutAlpha">.7</item>
        <item name="fadeInDuration">300</item>
        <item name="fadeOutDuration">1000</item>
        <item name="defaultHour">10</item>
        <item name="defaultMinute">30</item>
    </style>

    <!--    Set style for Time Picker dialog-->
    <style name="ThemeOverlay.Dialog.TimePicker" parent="@style/ThemeOverlay.Dialog.MaterialTimePicker">
        <item name="materialTimePickerViewStyle">@style/TimePickerStyle</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
<!--        <item name="android:textColor">@color/black</item>-->
        <item name="buttonBarNegativeButtonStyle">@color/black</item>
        <item name="buttonBarPositiveButtonStyle">@color/black</item>
    </style>

    <!--    Set text appearance for Time Picker widget. Alternatively, @style/Base.TextAppearance.MaterialDateTimePicker
    can be used as parent if you need to set the same text appearance for both Date and Time picker widgets-->
    <style name="TextAppearance.TimePicker" parent="@style/TextAppearance.MaterialTimePicker">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="DatePickerStyle" parent="Widget.MaterialDatePicker">
        <item name="android:textAppearance">@style/TextAppearance.DatePicker</item>
        <item name="highlighterColor">@color/grey_100</item>
        <item name="isShowHighlighter">true</item>
        <item name="highlighterHeight">55dp</item>
        <item name="fadeInAlpha">.3</item>
        <item name="fadeOutAlpha">.7</item>
        <item name="fadeInDuration">300</item>
        <item name="fadeOutDuration">1000</item>
        <item name="minYear">1995</item>
        <item name="maxYear">2050</item>
        <item name="defaultYear">2021</item>
        <item name="defaultMonth">1</item>
        <item name="defaultDay">1</item>
        <item name="dateFormat">DD_MMM_YYYY</item>
    </style>

    <!--    Set style for Date Picker dialog-->
    <style name="ThemeOverlay.Dialog.DatePicker" parent="@style/ThemeOverlay.Dialog.MaterialDatePicker">
        <item name="materialDatePickerViewStyle">@style/DatePickerStyle</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="buttonBarNegativeButtonStyle">@android:color/black</item>
        <item name="buttonBarPositiveButtonStyle">@android:color/black</item>
    </style>

    <style name="TextAppearance.DatePicker" parent="@style/TextAppearance.MaterialDatePicker">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

</resources>