<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DoNotForget" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/lightText_highEmphasis</item>
        <item name="colorOnPrimary">@color/darkText_highEmphasis</item>

        <item name="colorSecondary">@color/base</item>
        <item name="colorSecondaryVariant">@color/base_variant</item>
        <item name="colorOnSecondary">@color/lightText_highEmphasis</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/darkText_highEmphasis</item>

        <item name="colorError">@color/error_light</item>
        <item name="colorOnError">@color/lightText_highEmphasis</item>

        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/darkText_highEmphasis</item>

        <item name="colorTransparencyOut">@color/colorBlackout</item>
        <item name="textHighEmphasis">@color/darkText_highEmphasis</item>
        <item name="textMediumEmphasis">@color/darkText_mediumEmphasis</item>
        <item name="textDisableEmphasis">@color/darkText_disableEmphasis</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:colorBackground">?attr/backgroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?attr/backgroundColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="27">?attr/backgroundColor</item>
        <item name="android:panelFullBackground">?attr/backgroundColor</item>
        <item name="android:itemBackground">?attr/backgroundColor</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
        <item name="android:itemTextAppearance">@style/MenuItem</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="android:dialogTheme">@style/DialogStyle</item>
    </style>

    <style name="Theme.DoNotForget" parent="Base.Theme.DoNotForget" />

    <style name="Theme.DoNotForget.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">?attr/backgroundColor</item>
    </style>

    <style name="MenuItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="ToolbarButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_3sdp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <!-- Style for fragment dialog -->
    <style name="DialogStyle" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:background">?attr/backgroundColor</item>
        <item name="android:backgroundTint">?attr/backgroundColor</item>
    </style>

    <!-- Style for Color Picker dialog -->
    <style name="AlertDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">?attr/backgroundColor</item>
        <item name="android:dialogCornerRadius" tools:targetApi="28">8dp</item>
        <item name="colorOnSurface">?attr/colorOnBackground</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonBarStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonBarStyle</item>
    </style>

    <!-- Style for Date Picker dialog -->
    <style name="ThemeOverlay.Dialog.DatePicker" parent="@style/ThemeOverlay.Dialog.MaterialDatePicker">
        <item name="materialDatePickerViewStyle">@style/DatePickerStyle</item>
        <item name="colorOnSurface">?attr/colorOnBackground</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonBarStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonBarStyle</item>
    </style>

    <style name="DatePickerStyle" parent="Widget.MaterialDatePicker">
        <item name="android:textAppearance">@style/TextAppearance.DateTimePicker</item>
        <item name="highlighterColor">?attr/colorTransparencyOut</item>
        <item name="isShowHighlighter">true</item>
    </style>

    <!-- Style for Time Picker dialog -->
    <style name="ThemeOverlay.Dialog.TimePicker" parent="@style/ThemeOverlay.Dialog.MaterialTimePicker">
        <item name="materialTimePickerViewStyle">@style/TimePickerStyle</item>
        <item name="colorOnSurface">?attr/colorOnBackground</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonBarStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonBarStyle</item>
    </style>

    <style name="TimePickerStyle" parent="Widget.MaterialTimePicker">
        <item name="android:textAppearance">@style/TextAppearance.DateTimePicker</item>
        <item name="highlighterColor">?attr/colorTransparencyOut</item>
        <item name="isShowHighlighter">true</item>
    </style>

    <style name="TextAppearance.DateTimePicker" parent="@style/Base.TextAppearance.MaterialDateTimePicker">
        <item name="android:textColor">@color/base</item>
    </style>

    <style name="ButtonBarStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>