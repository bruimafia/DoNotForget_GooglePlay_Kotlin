<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DoNotForget" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryDark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondaryDark</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantDark</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryDark</item>

        <item name="backgroundColor">#121212</item>
        <item name="colorOnBackground">@color/grey_50</item>

        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorError">#CF6679</item>
        <item name="colorOnError">#000000</item>

        <item name="text_on_white">#444444</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:colorBackground">?attr/backgroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?attr/backgroundColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="27">?attr/backgroundColor</item>
        <item name="android:panelFullBackground">?attr/backgroundColor</item>
        <item name="android:itemBackground">?attr/backgroundColor</item>
        <item name="android:itemTextAppearance">@style/menuItem</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>

    <style name="menuItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">?attr/backgroundColor</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

</resources>